<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/border_target"
        android:visibility="invisible"
        android:id="@+id/target"
        android:contentDescription="@string/comp_border_target"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/degrees"
        android:contentDescription="@string/degrees_circle"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/directions"
        android:contentDescription="@string/direction_arrows"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pointer"
        android:id="@+id/pointer"
        android:contentDescription="@string/pointer"
        />
</RelativeLayout>